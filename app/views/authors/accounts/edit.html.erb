<% if flash.any? %>
   <% flash.keys.each do |key| %>
     <div class="alert alert-<%= key.to_s %> alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= flash[key] %>
     </div>
   <% end %>
<% end %>

<br>
<div class="row">
  <!-- Basic info section -->
  <div class="col-md-4">
    <%= form_tag authors_info_path, method: :put do %>
      <%= fields_for :author do |f| %>
        <h2><b>Basic info:</b></h2>
          <div class="form-group">
            <label>Name:</label>
            <%= f.text_field :name, value: current_author.name, class: 'form-control' %>
          </div>
              
          <div class="form-group">
            <label for="email">Email:</label>
            <%= f.text_field :email, value: current_author.email, class: 'form-control' %>
          </div>
              
          <%= f.submit "Update info", class: 'btn btn-primary' %>
      <% end %>
    <% end %>
  </div>

  <div class="col-md-2">
  </div>


  <!-- Change password section -->
  <div class="col-md-4">
    <%= form_tag authors_change_password_path, method: :put do %>
      <%= fields_for :author do |f| %>
        <h2><b>Change password:</b></h2>
          <div class="form-group">
            <label>Current password:</label>
            <%= f.password_field :current_password, class: 'form-control' %>
          </div>

          <div class="form-group">
            <label>New password:</label>
            <%= f.password_field :new_password, class: 'form-control' %>
          </div>

          <div class="form-group">
            <label>New password confirmation:</label>
            <%= f.password_field :new_password_confirmation, class: 'form-control' %>
          </div>

          <%= f.submit "Change password", class: 'btn btn-warning' %> 
      <% end %>
    <% end %>
  </div>
</div>
