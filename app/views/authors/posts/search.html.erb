<div class="row">
  <% if @posts.count >= 1%>
    <% @posts.each do |post| %>
      <div class='col-sm-6 col-lg-4'>
        <div class="card">
          <%= link_to post do %>
            <div class="card-topper" style='background-image: url(<%= form_image_select(post) %>);'></div>
          <% end %>
          <div class="card-block">
            <h4 class="card-title">
              <%= link_to post do%>
                <%= truncate(post.title, length: 75) %>
              <% end %>
            </h4>
            <p class="tags"><%= raw post.tags.map { |t| link_to t.name, posts_path(tag: t.name)}.join(', ') %></p>
            <p class="published-date"><%= post.published_date %></p>
            <div class="card-text">
              <%= link_to post do %>
                <p><%= truncate(post.description, length: 75) %></p>
              <% end %>
            </div>
            <%= link_to 'Read', post, class: "btn btn-read"%>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <h2><b>No Posts found!</b></h2>
  <% end %>
</div>

<% if @posts.count>9 %>
  <div class="apple_pagination justify-content-center">
    <%= will_paginate @posts, container: false %>
  </div>
<% end %>






